doctype html
html(lang='en')
head
    title MusiQ Song Request
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
    script(src='https://apis.google.com/js/api.js')
    script(src='https://www.gstatic.com/firebasejs/6.2.4/firebase-app.js')
    script(src='https://www.gstatic.com/firebasejs/6.2.4/firebase-firestore.js')
    script(src='https://apis.google.com/js/platform.js', async='', defer='')
    script(src='https://apis.google.com/js/platform.js?onload=renderButton', async='', defer='')

body(onload='loadClient();updatePlaylist();')
    .container
        .row
            .col(style='background-color: orange')
                h1#header.display-1.text-center MusiQ Search v2
        .row
            
            .container
                .row
                    .col.input-group(style='padding-top: 10%')
                        input#searchTextField.form-control(type='text', placeholder='Enter Song title / Artist name here', name='search')
                    .col-sm-1.input-group(style='padding-top: 10%')
                        button#searchButton.btn.btn-default(type='button', aria-label='Left Align', data-toggle='modal', data-target='#ytSearchResultModal')
                            i.material-icons(style='font-size:200%;color:red') power_settings_new
                .row
                    .col(style='padding: 2%')
                .row
                    .col(style='padding-top: 2.5%')
                        h2 Songs in Playlist
                        ul#songsList.list-group
    
                // The Modal
                #ytSearchResultModal.modal.fade
                    .modal-dialog
                        .modal-content
                            // Modal Header
                            .modal-header
                                h4.modal-title Search Results
                                button.close(type='button', data-dismiss='modal') Ã—
                            // Modal body
                            .modal-body
                                ul#searchResultList
                            // Modal footer
                            .modal-footer
                                button.btn.btn-danger(type='button', data-dismiss='modal') Close
    script.
        var input = document.getElementById("searchTextField");
        input.addEventListener("keyup", function(event) {
        if (event.keyCode === 13) {
        event.preventDefault();
        document.getElementById("searchButton").click();
        }
        });
    script(type='text/javascript', src='./js/v2_search.js')
    